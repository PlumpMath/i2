<h1>Edit</h1>
 
<%= form_for @test do |f| %>
<div class="field-unit field-unit--string">
	<div class="field-unit__label">
 		<%= f.label :name, :class => "field-unit__label" %>
 	</div>
 	<div class="field-unit__field">
    	<%= f.text_field :name, :class => "field-unit__field" %>
    </div>
</div>
<div class="field-unit field-unit--string">
	<div class="field-unit__label">
    	<%= f.label :description, :class => "field-unit__label" %>
    </div>
 	<div class="field-unit__field">
    <%= f.text_field :description, :class => "field-unit__field" %>
  </div>
</div>
<div class="field-unit field-unit--string">
	<div class="field-unit__label">
    	<%= f.label "Type", :class => "field-unit__label" %><br>
	</div>
 	<div class="field-unit__field">
		<%= f.select(:type) do %>
  			<% [['standalone', 'standalone'], ['proxy', 'proxy']].each do |c| -%>
    			<%= content_tag(:option, c.first, value: c.last) %>
  			<% end %>
		<% end %>
  </div>
</div>
<div class="form-actions">
    <%= f.submit %>
</div>

<%= render "edit_collection",  test: @test %>

  

<% end %>