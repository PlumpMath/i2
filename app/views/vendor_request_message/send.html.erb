<h1><%= @page_title %></h1>
<header class="header">
  <h1 class="header__heading" id="page-title"><%= content_for(:title) %></h1>
  <div class="header__actions">
    <td><%= link_to 'Back', :back, class: "button" %></td>
  </div>
</header>
<%= form_for @message do |f| %>
  <%= f.hidden_field :message_id, value: @message.message_id %>
  <div class="field-unit field-unit--string">
    <div class="field-unit__label">
      <%= f.label "URL : " %>
    </div>
    <div class="field-unit__field">
      <%= @message.sent_to_url %>
    </div>
  </div>
  <div class="field-unit field-unit--string">
    <div class="field-unit__label">
      <%= f.label "Description : " %>
    </div>
    <div class="field-unit__field">
      <%= @message.description %>
    </div>
  </div>
  <div class="field-unit field-unit--string">
    <div class="field-unit__label">
      <%= f.label "Message : " %>
    </div>
    <div class="field-unit__field">
      <pre class="pre_message">
      <%= @message.message_txt %>
    </pre>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit "Send" %>
  </div>
<% end %>